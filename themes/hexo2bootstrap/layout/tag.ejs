<div class="container-fluid" style="margin-top: 60px">
    <div class="row-fluid">
        <div class="span9">
            <% page.posts.each(function(item){ %>
            <%- partial('_component/common/list', {item: item, index: true}) %>
            <% }); %>
        </div>

        <div class="span3 hidden-phone">
            <%- partial('_component/donation/alipay')%>
            <div>
            <ul class="span3 widget nav nav-list affix">
                <% if(site.tags.length) {%>
                <% site.tags.sort('name').each(function(item){ %>
                <li><a href="<%- config.root %><%- item.path %>"></i><%= item.name %>
                    <small><%= item.posts.length %></small>
                </a>

                </li>
                <% }); %>
                <%}%>

            </ul>
            </div>
        </div>
    </div>

</div>
